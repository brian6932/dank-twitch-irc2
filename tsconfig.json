{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,

    "lib": ["ES2022"],
    "target": "ES2022",

    "strict": true
    // "noUncheckedIndexedAccess": true // TODO: we will want this at some point
  },
  "include": ["lib/**/*.ts"]
}
