{
  "name": "@kararty/dank-twitch-irc",
  "version": "6.2.0",
  "description": "Twitch IRC library for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup lib/index.ts --clean --dts --format cjs --format esm --external semaphore-async-await",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write !pnpm-lock.yaml",
    "format:check": "prettier --check . !pnpm-lock.yaml",
    "test": "vitest --exclude ./lib/utils/helpers.spec.ts",
    "clean": "rimraf ./dist ./coverage",
    "generate-readme-toc": "doctoc README.md --github --title \"## Table of Contents\" && prettier --write \"./README.md\""
  },
  "keywords": [
    "twitch",
    "irc",
    "chat",
    "tmi"
  ],
  "author": "Ruben Anders",
  "license": "MIT",
  "repository": "https://github.com/kararty/dank-twitch-irc",
  "dependencies": {
    "async-sema": "^3.1.1",
    "debug-logger": "^0.4.1",
    "duplexify": "^4.1.2",
    "eventemitter3": "^4.0.7",
    "lodash.camelcase": "^4.3.0",
    "lodash.pickby": "^4.6.0",
    "make-error-cause": "^2.3.0",
    "simple-websocket": "^9.1.0",
    "split2": "^4.1.0"
  },
  "devDependencies": {
    "@mastondzn/eslint": "^0.6.13",
    "@types/chai-as-promised": "^7.1.5",
    "@types/duplexify": "^3.6.1",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.pickby": "^4.6.6",
    "@types/node": "^20.11.16",
    "@types/simple-websocket": "^7.0.3",
    "@types/sinon": "^10.0.11",
    "@types/split2": "^3.2.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vitest/coverage-v8": "^1.2.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "doctoc": "^2.1.0",
    "eslint": "^8.13.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sinon": "^13.0.2",
    "ts-node": "^10.7.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "bugs": {
    "url": "https://github.com/kararty/dank-twitch-irc/issues"
  },
  "homepage": "https://github.com/kararty/dank-twitch-irc#readme"
}
